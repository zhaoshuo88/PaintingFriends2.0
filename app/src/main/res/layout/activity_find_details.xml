<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/RlayFinddetailsBar"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentTop="true"
        android:background="#ffffff">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/btn_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作品展示"
            android:textColor="#ff464646"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/menu"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RlayFinddetailsBar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/IvFinddetailsImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/find_details"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RvFinddetailsCommentlist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
   </LinearLayout>
    </ScrollView>
    <!-- 写评论 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingLeft="15dip"
        android:paddingRight="15dip">
        <EditText
            android:id="@+id/EtFinddetailsComment"
            android:layout_width="0dp"
            android:layout_height="38dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="7dip"
            android:layout_weight="5"
            android:hint="写评论..."
            android:gravity="center|left"
            android:paddingLeft="12dip"
            android:textSize="13sp"
            android:background="@drawable/bg_detail_comment_btn"
            />
        <Button
            android:id="@+id/BtnFinddetailsComment"
            android:layout_width="0dp"
            android:layout_height="38dip"
            android:layout_weight="1"
            android:text="发送"
            android:textSize="13sp"
            android:layout_marginTop="7dip"
            android:layout_marginBottom="7dip"
            android:background="@drawable/bg_detail_comment_btn"/>
    </LinearLayout>
</RelativeLayout>