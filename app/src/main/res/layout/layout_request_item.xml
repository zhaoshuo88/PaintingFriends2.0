<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context="com.example.administrator.paintingfriends20.ui.MainActivity">




        <!-- 个人消息 -->
    <RelativeLayout
        android:id="@+id/RlayRequestitemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:clickable="true">
        <!-- 头像 -->
        <ImageButton
            android:id="@+id/IbReqitemHeadphoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/touxiang1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/IbReqitemHeadphoto"
            android:clickable="false"
            android:orientation="vertical">
            <!-- 昵称 -->
            <TextView
                android:id="@+id/TvReqitemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:gravity="top"
                android:text="喵星狗宠物店老版"
                android:textColor="#000000"
                android:textSize="20dp" />

            <!-- 具体需求 -->
            <TextView
                android:id="@+id/TvReqitemRequest"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/zhijiao"
                android:clickable="false"
                android:hint="具体要求:"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" />

        </LinearLayout>

    </RelativeLayout>

    <!-- 发布时间 -->
        <TextView
            android:id="@+id/TvReqitemTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="end"
            android:paddingRight="30dp"
            android:clickable="false"
            android:layout_marginBottom="3dp"
            android:hint="发布时间："/>


</LinearLayout>

